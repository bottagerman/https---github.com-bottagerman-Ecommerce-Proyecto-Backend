<div>
  <h1>All our Products!</h1>
  {{#each allProducts}}
<div class="card" style="width: 20rem;">
  <img src="..." class="card-img-top" alt="...">
  <div class="card-body">
    <h3 class="card-title">{{this.title}}</h3>
    <p class="card-text">{{this.description}}</p>
    <p class="card-text">{{this.price}}</p>
    <div style="display: flex; align-items:center">
    <button class="btn btn-primary">-</button>
    <p class="card-text">{{this.stock}}</p>
    <button class="btn btn-primary">+</button>
    </div>
    <div style="margin-top: 10px;">
    <a href="#" class="btn btn-primary">Detail</a>
    <form action="http://localhost:8080/api/carts/64d8046293147a21d2294514/products/{{this.id}}" method="POST">
    <button type="submit" class="btn btn-primary">add to cart</button>
    </div>
    </form>
  </div>
</div>
  {{/each}}
  <div>
    {{this.pagingCounter}}
    {{this.totalPages}}

    <hr />
    <hr />
    

    {{prevPage}}
    {{#if hasPrevPage}}
      <a href="http://localhost:8080/?page={{prevPage}}">⬅️</a>
      
    {{/if}}
    {{page}}
    {{#if hasNextPage}}
      <a href="http://localhost:8080/?page={{nextPage}}">➡️</a>
    {{/if}}
    {{nextPage}}
  </div>
</div>